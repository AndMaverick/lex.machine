name: ğŸ§  Bias Audit

on:
  push:
    branches: [ main ]
  pull_request:

jobs:
  bias-audit:
    runs-on: ubuntu-latest

    steps:
      - name: ğŸ§© Checkout Repository
        uses: actions/checkout@v4

      - name: ğŸ Set Up Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.10'

      - name: ğŸ“¦ Install Dependencies
        run: |
          python -m pip install --upgrade pip
          pip install pandas numpy

      - name: âš–ï¸ Run Bias Check
        run: |
          python python/governance/bias_check.py

      - name: ğŸ“Š Evaluate Compliance
        run: |
          echo "Evaluating bias compliance..."
          bias_score=$(jq '.bias_score' bias_report.json)
          echo "Detected bias score: $bias_score"

          threshold=0.1
          if (( $(echo "$bias_score > $threshold" | bc -l) )); then
            echo "âŒ Compliance failed â€” bias score ($bias_score) exceeds threshold ($threshold)"
            exit 1
          else
            echo "âœ… Compliance passed â€” bias score ($bias_score) within acceptable range"
          fi

      - name: ğŸ“ Upload Bias Report
        if: always()
        uses: actions/upload-artifact@v4
        with:
          name: bias-report
          path: bias_report.json


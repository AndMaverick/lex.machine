name: 🧠 Bias Audit

on:
  push:
    branches: [ main ]
  pull_request:

jobs:
  bias-audit:
    runs-on: ubuntu-latest

    steps:
      - name: 🧩 Checkout Repository
        uses: actions/checkout@v4

      - name: 🐍 Set Up Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.10'

      - name: 📦 Install Dependencies
        run: |
          python -m pip install --upgrade pip
          pip install pandas numpy

      - name: ⚖️ Run Bias Check
        run: |
          python python/governance/bias_check.py

      - name: 📊 Evaluate Compliance
        run: |
          echo "Evaluating bias compliance..."
          bias_score=$(jq '.bias_score' bias_report.json)
          echo "Detected bias score: $bias_score"

          threshold=0.1
          if (( $(echo "$bias_score > $threshold" | bc -l) )); then
            echo "❌ Compliance failed — bias score ($bias_score) exceeds threshold ($threshold)"
            exit 1
          else
            echo "✅ Compliance passed — bias score ($bias_score) within acceptable range"
          fi

      - name: 📁 Upload Bias Report
        if: always()
        uses: actions/upload-artifact@v4
        with:
          name: bias-report
          path: bias_report.json

